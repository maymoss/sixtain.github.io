<!DOCTYPE html>
<html>
<head>
    <title>Vue 3 範例</title>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
</head>
<body>
    <div id="app">
        <h1>Hello {{ userType }}</h1>
        <p>I'm hosted with GitHub Pages.</p>
        
        <form @submit.prevent="checkUserType">
            <label for="uname">使用者名稱：</label>
            <input type="text" id="uname" v-model="uname" placeholder="輸入使用者名稱">
            <button type="submit">檢查</button>
        </form>
    </div>

    <script>
        const { createApp, ref } = Vue;
        
        createApp({
            setup() {
                const uname = ref('');
                const userType = ref('使用者');
                
                const checkUserType = () => {
                    const trimmedName = uname.value.trim();
                    if (trimmedName === "RD工程師") {
                        userType.value = "工程師";
                    } else {
                        userType.value = "使用者";
                    }
                };
                
                return {
                    uname,
                    userType,
                    checkUserType
                };
            }
        }).mount('#app');
    </script>
</body>
</html>
